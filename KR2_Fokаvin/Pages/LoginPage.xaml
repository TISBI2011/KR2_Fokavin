<Page x:Class="KR2_Fokаvin.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Fokаvin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <TextBlock x:Name="Login"/>
            <TextBox x:Name="BLogin"/>
            <TextBlock x:Name="Password"/>
            <TextBox x:Name="BPassword"/>
            <Button x:Name="TBLogin" Content="Login" Click="Login_Click"/>
            <Button x:Name="Registration" Content="Registration" Click="Registration_Click"/>
        </StackPanel>
    </Grid>
</Page>
